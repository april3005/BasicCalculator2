<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".NumbersActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/btn_seven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onNumberClick"
            android:text="@string/seven" />

        <Button
            android:id="@+id/btn_eight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onNumberClick"
            android:text="@string/eight"
            app:layout_constraintBottom_toTopOf="@+id/btn_five"
            app:layout_constraintLeft_toLeftOf="@+id/btn_five"
            app:layout_constraintRight_toRightOf="@+id/btn_five" />

        <Button
            android:id="@+id/btn_nine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onNumberClick"
            android:text="@string/nine"
            app:layout_constraintBottom_toBottomOf="@+id/btn_eight"
            app:layout_constraintLeft_toRightOf="@+id/btn_eight"
            app:layout_constraintTop_toTopOf="@+id/btn_eight" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/btn_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onNumberClick"
            android:text="@string/four"
            app:layout_constraintBottom_toBottomOf="@+id/btn_five"
            app:layout_constraintRight_toLeftOf="@+id/btn_five"
            app:layout_constraintTop_toTopOf="@+id/btn_five" />

        <Button
            android:id="@+id/btn_five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onNumberClick"
            android:text="@string/five" />

        <Button
            android:id="@+id/btn_six"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onNumberClick"
            android:text="@string/six"
            app:layout_constraintBottom_toBottomOf="@+id/btn_five"
            app:layout_constraintLeft_toRightOf="@+id/btn_five"
            app:layout_constraintTop_toTopOf="@+id/btn_five"
            app:layout_constraintVertical_bias="0.0" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/btn_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onNumberClick"
            android:text="@string/one"
            app:layout_constraintBottom_toBottomOf="@+id/btn_two"
            app:layout_constraintRight_toLeftOf="@+id/btn_two"
            app:layout_constraintTop_toTopOf="@+id/btn_two" />

        <Button
            android:id="@+id/btn_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onNumberClick"
            android:text="@string/two"
            app:layout_constraintLeft_toLeftOf="@id/btn_five"
            app:layout_constraintRight_toRightOf="@+id/btn_five"
            app:layout_constraintTop_toBottomOf="@id/btn_five" />

        <Button
            android:id="@+id/btn_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onNumberClick"
            android:text="@string/three"
            app:layout_constraintBottom_toBottomOf="@+id/btn_two"
            app:layout_constraintLeft_toRightOf="@+id/btn_two"
            app:layout_constraintTop_toTopOf="@+id/btn_two" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/btn_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onNumberClick"
            android:text="@string/dot"
            app:layout_constraintLeft_toLeftOf="@id/btn_two"
            app:layout_constraintRight_toRightOf="@+id/btn_two"
            app:layout_constraintTop_toBottomOf="@id/btn_two" />

        <Button
            android:id="@+id/btn_zero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onNumberClick"
            android:text="@string/zero"
            app:layout_constraintBottom_toBottomOf="@+id/btn_dot"
            app:layout_constraintRight_toLeftOf="@+id/btn_dot"
            app:layout_constraintTop_toTopOf="@+id/btn_dot" />

        <Button
            android:id="@+id/btn_equals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onNumberClick"
            android:text="="
            app:layout_constraintBottom_toBottomOf="@+id/btn_dot"
            app:layout_constraintRight_toLeftOf="@+id/btn_dot"
            app:layout_constraintTop_toTopOf="@+id/btn_dot" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">

    <Button
        android:id="@+id/btn_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C"
        android:onClick="onClearClick"
 />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onNextClick"
        android:text="NEXT"
        app:layout_constraintBottom_toBottomOf="@+id/btn_dot"
        app:layout_constraintRight_toLeftOf="@+id/btn_dot"
        app:layout_constraintTop_toTopOf="@+id/btn_dot" />

    </LinearLayout>
    <TextView
        android:id="@+id/tv_result"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />


</LinearLayout>